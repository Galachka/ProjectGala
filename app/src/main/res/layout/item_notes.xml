<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#808080"
        app:cardCornerRadius="10dp">

        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:id="@+id/viewPriority"
            android:background="@drawable/red_dot"
            android:layout_margin="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/bold"
            android:orientation="vertical"
            android:textSize="16sp"
            android:maxLines="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="@string/app_name"
                android:id="@+id/notesTitle"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:maxLines="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:layout_marginTop="5dp"
                android:id="@+id/notesSubtitle"
                android:text="hddhgkjgndbjng s jn ;sen n ;sn knf; kjndkjn ;sdkfn ;dsns;f nds;fkn kdsnf knjsd; knd; jndsf;n nd; jnf; sdjfkn ;dsfkjn d;sf n;dsnd;f d n;sfn;df ndf"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/bold"
                android:maxLines="1"
                android:id="@+id/notesDate"
                android:text="25 mart"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>